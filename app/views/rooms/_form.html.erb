<%= form_with(model: room, local: true, class: "max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-lg") do |form| %>
<% if room.errors.any? %>
<div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
  <div class="flex items-center mb-2">
    <svg class="w-5 h-5 text-red-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
    </svg>
    <h3 class="text-red-800 font-semibold">
      <%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:
    </h3>
  </div>
  <ul class="list-disc list-inside text-red-700 space-y-1">
    <% room.errors.each do |error| %>
    <li><%= error.full_message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="space-y-6">
  <div>
    <%= form.label :room_type, t(".room_type"), class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.select :room_type,
      Room.room_types.keys.map { |key| [key.humanize, key] },
      { prompt: t(".placeholder.room_type") },
      { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm 
                focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>

  </div>

  <div>
    <%= form.label :room_code,  t(".room_code"), class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :room_code, 
          placeholder: t(".placeholder.room_code"),
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.label :price, t(".price"), class: "block text-sm font-medium text-gray-700 mb-2" %>
    <div class="relative">
      <span class="absolute left-3 top-2 text-gray-500">$</span>
      <%= form.number_field :price, 
            step: 0.01,
            min: 0,
            placeholder: t(".placeholder.price"),
            class: "w-full pl-8 pr-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>
  </div>

  <div>
    <%= form.label :max_customer, t(".max_customer"), class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.number_field :max_customer, 
          min: 1,
          max: 10,
          placeholder: t(".placeholder.max_customer"),
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    <p class="mt-1 text-sm text-gray-500">Maximum number of guests allowed in this room</p>
  </div>

  <div class="flex items-center justify-end space-x-4 pt-4">
    <%= link_to "Cancel", rooms_path, 
          class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <%= form.submit class: "px-6 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
</div>
<% end %>