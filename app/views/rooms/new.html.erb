<% content_for :title, t(".title") %>
<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-2xl bg-white shadow-md rounded-xl p-6 space-y-6">
    <h1 class="text-2xl font-bold text-gray-900 border-b pb-3">
      <%= t(".title") %>
    </h1>

    <%= render "form", room: @room %>

    <div class="pt-4">
      <%= link_to t(".back"), rooms_path,
          class: "inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium text-gray-700 bg-gray-100 hover:bg-gray-200 transition-colors" %>
    </div>
  </div>
</div>